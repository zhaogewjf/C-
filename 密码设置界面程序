	char ret = 0;
	int ch =0;
	char password[20] = {0};
	printf("请输入密码:");
	scanf("%s",password);
	while ((ch =getchar()) !='\n')
	{
		;
	}
	printf("请确认（Y/N）:>");
	ret = getchar();
	if (ret == 'Y')
	{
		printf("确认成功\n");
	}
	else
	{
		printf("放弃确认\n");
	}
	return 0;
}
